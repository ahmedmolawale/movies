<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/image"
        android:layout_width="@dimen/movie_image_width"
        android:layout_height="@dimen/movie_image_height"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:background="@drawable/rect_shimmer_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/title_image"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <View
        android:id="@+id/release_image"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="@id/title_image"
        app:layout_constraintStart_toStartOf="@id/title_image"
        app:layout_constraintTop_toBottomOf="@id/title_image" />

    <View
        android:id="@+id/image_2"
        android:layout_width="@dimen/movie_image_width"
        android:layout_height="@dimen/movie_image_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rect_shimmer_bg"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/title_image_2"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="@id/image_2"
        app:layout_constraintStart_toStartOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/image_2" />

    <View
        android:id="@+id/release_image_2"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:background="@drawable/shimmer_bg"
        app:layout_constraintEnd_toEndOf="@id/title_image_2"
        app:layout_constraintStart_toStartOf="@id/title_image_2"
        app:layout_constraintTop_toBottomOf="@id/title_image_2" />

</androidx.constraintlayout.widget.ConstraintLayout>

